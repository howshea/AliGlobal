<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hoshea.aliglobal"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".Application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.LoginActivity"
            android:theme="@style/CommonNoActionBarTheme">
        </activity>
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:theme="@style/CommonNoActionBarTheme">
        </activity>
        <activity
            android:name=".ui.activity.ShoppingCartActivity"
            android:theme="@style/ShopCartTheme">
        </activity>
        <activity
            android:name=".ui.activity.GoodsActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.activity.OrderDetailsActivity"
            android:theme="@style/LoginTheme">
        </activity>
        <activity
            android:name=".ui.activity.PersonInfoActivity"
            android:label="@string/title_activity_person_info"
            android:theme="@style/CommonNoActionBarTheme">
        </activity>
        <activity
            android:name=".ui.activity.CategoryQueryActivity"
            android:theme="@style/CommonTheme">
        </activity>
        <activity android:name=".ui.activity.UserDetailsActivity"
            android:theme="@style/CommonTheme">
        </activity>
    </application>

</manifest>