<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_bottomDialog_pay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:text="HaipoTao"
                android:id="@+id/receive_name"
                android:hint="收货人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="110"
                android:hint="收货手机号"
                android:id="@+id/receive_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="Anhui"
                android:id="@+id/receive_address"
                android:hint="收货地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/pay_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--复用 layout: order_item.xml-->
        </ListView>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/pay_password"
        android:layout_width="180dp"
        android:layout_height="wrap_content"/>
    <Button
        android:background="@color/colorPrimaryDeepOrange"
        android:textColor="#ffffff"
        android:id="@+id/submit"
        android:text="提交订单"
        android:layout_width="80dp"
        android:layout_height="40dp"/>
</LinearLayout>